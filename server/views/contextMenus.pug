#starContextMenu.menu
	.user
		a.ajax.bookmarkToggle(href="/bookmark") Bookmark

		a.create.recreateStar(
			href="/recreate"
			class = (user.recreationTickets > 0 ? '' : 'disabled')
		) Recreate

		if user.lv >= config.adminLevel:
			a.admin-nav(href="/admin/moveStar") Move
			//-a.admin-nav(href="/admin/recolorStar") Recolor
			//-a.admin-nav(href="/admin/renameStar") Change Creator
			a.admin-nav.danger(href="/admin/deleteStar") Delete

	.guest
		a.nav(href="/login") login
		a.nav(href="/register") register

#galaxyContextMenu.menu
	.user
		a.create.createStar(
			href="/create"
			class = (user.creationTickets > 0 ? '' : 'disabled')
		) Create Constellation

		if user.lv >= config.adminLevel:
			//-///REVISIT placement:
			a.nav.admin-nav(href="/admin") Admin
			a.admin-nav(href="/admin/update-db-schemas") Update Schemas
			a.admin-nav(href="/admin/generate-demo-stars") Generate Demo Stars

	.guest
		a.nav(href="/login") login
		a.nav(href="/register") register
