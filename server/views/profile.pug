input#user-bookmarks( ///REVISIT architecture
	type="hidden"
	value= user ? user.bookmarks.join(",") : ""
)

form#settings-page.ajax.uibox(
	method='POST',
	action='/update-profile'
	data-ajax-action='/ajax/update-profile'
)
	label.floatBeside(for="profile_email") Email
	input#profile_email(
		type="text"
		name="email"
		placeholder="email"
		value=user.email
		disabled
	)

	label.floatBeside(for="profile_display-name") Display Name
	input#profile_display-name(
		type="text"
		name="displayName"
		placeholder="display name"
		value= user.displayName
	)

