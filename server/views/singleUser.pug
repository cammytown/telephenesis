div#user-page.single-user.uibox
	section
		span.floatBeside username
		h1= viewingUser.displayName

	//-@TODO probably implement:
	//-span.floatBeside member since
	//-div= viewingUser.joinTimestamp
	if(viewingUser.artistIdentities && viewingUser.artistIdentities.length)
		section
			h3 Artist Identities
			ul
				each artistIdentity in viewingUser.artistIdentities
					li= artistIdentity.name

	section
		h3 Recent Comments
		if viewingUser.comments && viewingUser.comments.length
			ul
				each comment in viewingUser.comments
					li= comment.text
		else
			span No user comments.
